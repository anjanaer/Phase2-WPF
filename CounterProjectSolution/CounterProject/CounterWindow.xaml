<Window x:Class="CounterProject.CounterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CounterProject"
        mc:Ignorable="d"
        Title="Counter App" Height="450" Width="800" WindowState="Maximized" Closed="Window_Closed">
    <Canvas>
        <TextBox x:Name="txtCounter" HorizontalAlignment="Left" Height="75" TextWrapping="Wrap" VerticalAlignment="Center" Width="199" Background="#FF19AC52" Canvas.Left="286" Canvas.Top="83" Text="{Binding DisplayCounter.Count}"/>
        <Button x:Name="btnPlus" Content="+" Height="52" Canvas.Left="243" Canvas.Top="197" Width="116" FontWeight="Bold" FontSize="36" Background="#FF328BDA"  Command="{Binding Plus}" />
        <Button x:Name="btnMinus" Content="-" Height="52" Canvas.Left="418" Canvas.Top="197" Width="116" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" Background="#FF1D82DC" Command="{Binding Minus}"/>

    </Canvas>
</Window>
