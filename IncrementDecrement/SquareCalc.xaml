<Window x:Class="IncrementDecrement.SquareCalc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IncrementDecrement"
        mc:Ignorable="d"
        Title="SquareCalc" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <TextBlock x:Name="lblNumber" HorizontalAlignment="Left" Margin="84,73,0,0" TextWrapping="Wrap" Text="Number" VerticalAlignment="Top"/>
        <TextBlock x:Name="lblResult" HorizontalAlignment="Left" Margin="84,125,0,0" TextWrapping="Wrap" Text="Result" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNumber" HorizontalAlignment="Left" Margin="172,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtResult" HorizontalAlignment="Left" Margin="172,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSquare" Content="Square" HorizontalAlignment="Left" Margin="100,187,0,0" VerticalAlignment="Top" Click="btnSquare_Click"/>
        <Button x:Name="btnCube" Content="Cube" HorizontalAlignment="Left" Margin="212,187,0,0" VerticalAlignment="Top" Click="btnCube_Click"/>

    </Grid>
</Window>
